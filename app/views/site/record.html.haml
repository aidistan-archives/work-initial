        .am-u-sm-4= image_tag 'sticker5.png', size: '64x64', 'data-sticker' => '5', 'data-am-modal-close' => true
        .am-u-sm-4= image_tag 'sticker6.png', size: '64x64', 'data-sticker' => '6', 'data-am-modal-close' => true
      .am-g
        .am-u-sm-4= image_tag 'sticker7.png', size: '64x64', 'data-sticker' => '7', 'data-am-modal-close' => true
